<!DOCTYPE html>
<html>
<head>
  <title>Create User</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-dark text-light">
  <%- include('partials/title_banner') %>
  <nav class="navbar navbar-expand-lg navbar-dark glass-nav shadow">
    <div class="container">
      <a class="navbar-brand neon-text" href="/dashboard">User Admin</a>
      <div>
        <a href="/logout" class="btn btn-outline-neon">Logout</a>
      </div>
    </div>
  </nav>
  <div class="container mt-5">
    <div class="card dark-glass p-4 border-0 shadow" style="max-width: 500px; margin:auto;">
      <h2 class="mb-4 neon-text">Create New User</h2>
      <% if (message) { %>
        <div class="alert alert-success"><%= message %></div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <form method="post" action="/create-user">
        <div class="mb-3">
          <input name="username" class="form-control form-control-dark" placeholder="Username" required autocomplete="username"/>
        </div>
        <div class="mb-3">
          <input type="password" name="password" class="form-control form-control-dark" placeholder="Password" required autocomplete="new-password"/>
        </div>
        <div class="mb-3">
          <input name="email" class="form-control form-control-dark" placeholder="Email" required autocomplete="email"/>
        </div>
        <div class="mb-3">
          <select name="role" class="form-select form-select-dark" required>
            <option value="USER">User</option>
            <option value="GROUP_HEAD">Group Head</option>
            <option value="MASTER">Master</option>
            <option value="ADMIN">Admin</option>
            <option value="SMU">SMU</option>
          </select>
        </div>
        <button type="submit" class="btn btn-neon w-100">Create</button>
      </form>
      <a href="/dashboard" class="btn btn-link text-secondary mt-3">Back to dashboard</a>
    </div>
  </div>
</body>
</html>